{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Username</th>
                <th>Password</th>
                <th>Roleuser</th>
                <th>Employee</th>
                <th>DateInscription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.roleuser }}</td>
                <td>{{ user.employee }}</td>
                <td>{{ user.dateInscription ? user.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-success btn-sm" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    {{ include('user/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-sm"href="{{ path('user_new') }}">Create new</a>
{% endblock %}

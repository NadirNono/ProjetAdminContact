{% extends 'base.html.twig' %}

{% block title %}Login Form{% endblock %}

{% block body %}
    <h1>Connectez vous</h1>
    <div class="container">
        <div class="row col-md-3">&nbsp;</div>
        <div class="row col-md-6">    
            <div class="bg-light py-3 px-3">
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <input type="text" placeholder="adresse mail ..." required class="form-control" name="_username" id="email">
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="mot de passe ..." required class="form-control" name="_password" id="password">
                    </div>
                    <div class="form-group">
                        <a class="btn btn-success btn-sm" href="{{ path('user_index') }}">Se connecter</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
   

{% endblock %}
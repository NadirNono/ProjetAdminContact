{% extends 'base.html.twig' %}

{% block title %}Login Form{% endblock %}

{% block body %}
    <h1>Login</h1>
    <form action="{{ path('security_login') }}" method="POST">
    <div class="form-group">
        <input type="text" placeholder="adresse mail ..." required class="form-control" name="_username">
    </div>
    <div class="form-group">
        <input type="password" placeholder="mot de passe ..." required class="form-control" name="_password">
    </div>
    <div class="form-group">
        <a class="btn btn-success btn-sm" href="{{ path('user_index') }}">Se connecter</a>
    </div>
    </form>
   

{% endblock %}
{% extends 'admin/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>IpContact</th>
                <td>{{ contact.ipContact }}</td>
            </tr>
            <tr>
                <th>DateContact</th>
                <td>{{ contact.dateContact ? contact.dateContact|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ contact.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ contact.status }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning btn-sm" href="{{ path('admin_contact') }}">back to list</a>

    <a class="btn btn-primary btn-sm" href="{{ path('admin_contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('admin/contact/_delete_form.html.twig') }}
{% endblock %}

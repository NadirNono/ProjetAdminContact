{% extends 'admin/base.html.twig' %}

{% block title %} Admin User index{% endblock %}

{% block body %}
    <h1>Admin User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Picture</th>
                <th>DateInscription</th>
                <th>Password</th>
                <th>Job</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.picture }}</td>
                <td>{{ user.dateInscription ? user.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.job }}</td>
                <td>
                    <a class="btn btn-success btn-sm" href="{{ path('admin_user_show', {'id': user.id}) }}"> <i class="fas fa-eye"></i> show</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('admin_user_edit', {'id': user.id}) }}"> <i class="fas fa-edit"></i> edit</a>
                    {{ include('admin/user/_delete_form.html.twig') }} 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a class="btn btn-primary btn-sm" href="{{ path('admin_user_new') }}">Create new</a>
{% endblock %}
